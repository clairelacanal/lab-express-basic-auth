{{!-- views/auth/login.hbs --}}

<div id="form">
    <h2>Login</h2>
    <form name="login" action="/login" method="POST">
        <label for="input-username">Username</label>
        {{!-- Permet de lier le label avec le champ --}}
        <input type=" username" id="input-username" name="username" placeholder="Your usernae" required />

        <label for="input-password">Password</label>
        <input type="password" name="password" id="input-password" placeholder="********" required/>

        <button type="submit">Login</button>

        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}
    </form>
</div>